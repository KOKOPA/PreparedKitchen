<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="calendarmapper">

<resultMap type="CalDto" id="dtoMap">
 		<result property="title" column="RECIPE_NAME"/>
 		<result property="paymentdate" column="PAYMENT_DATE"/>
 		<result property="materialname" column="MATERIAL_NAME"/>
 		<result property="id" column="ID"/>
</resultMap>


<select id="mycalendar"  resultMap="dtoMap">
		SELECT R.RECIPE_NAME, P.PAYMENT_DATE
		FROM RECIPE R, PAYMENT P
		WHERE P.ID = #{id}
	</select>
	
<update id="updatecalendar" parameterType="CalDto">
UPDATE  PAYMENT
  	SET  PAYMENT_DATE =#{paymentdate}
  	WHERE ID=#{id}
</update>
</mapper>