<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="calendarmapper">

<resultMap type="CalDto" id="dtoMap">
 		<result property="recipe_name" column="RECIPE_NAME"/>
 		<result property="payment_date" column="PAYMENT_DATE"/>
 		<result property="payment_no" column="PAYMENT_NO"/>
 		<result property="payment_group" column="PAYMENT_GROUP"/>
 		<result property="recipe_no" column="RECIPE_NO"/>
 		<result property="id" column="ID"/>
</resultMap>


<select id="mycalendar"  resultMap="dtoMap">
		SELECT R.RECIPE_NAME, P.PAYMENT_DATE, P.PAYMENT_NO
		FROM RECIPE R, PAYMENT P
		WHERE P.ID = #{id}
	</select>

	
<update id="updatecalendar" parameterType="CalDto">
UPDATE  PAYMENT
  	SET  PAYMENT_DATE =#{payment_date}
  	WHERE ID=#{id} AND PAYMENT_NO=#{payment_no}
</update>
</mapper>